// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Self-Writing Components Models ---

model Component {
  id                String         @id @default(uuid())
  name              String
  description       String?
  currentVersion    String         @default("1.0.0")
  isActive          Boolean        @default(true)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  
  // Relations
  versions         ComponentVersion[]
  usagePatterns    ComponentUsage[]
  apiContracts     ApiContract[]
  
  @@unique([name])
}

model ComponentVersion {
  id           String    @id @default(uuid())
  componentId  String
  version      String
  code         String    @db.Text
  description  String?
  isActive     Boolean   @default(true)
  releasedAt   DateTime  @default(now())
  
  // Relations
  component    Component @relation(fields: [componentId], references: [id])
  
  @@unique([componentId, version])
}

model ComponentUsage {
  id           String    @id @default(uuid())
  componentId  String
  method       String
  parameters   Json      // Stores parameter values
  calledAt     DateTime  @default(now())
  
  // Relations
  component    Component @relation(fields: [componentId], references: [id])
}

model ApiContract {
  id           String    @id @default(uuid())
  componentId  String
  version      String
  contract     Json      // OpenAPI/Swagger-like schema
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  
  // Relations
  component    Component @relation(fields: [componentId], references: [id])
  
  @@unique([componentId, version])
}
