# GitHub Configuration (REQUIRED for GitHub indexing)
GITHUB_TOKEN=your_github_personal_access_token

# OpenAI Configuration (OPTIONAL - enables semantic search)
# Without this, the system uses fallback hash-based embeddings
OPENAI_API_KEY=your_openai_api_key

# Anthropic Configuration (OPTIONAL - enables LLM features)
# Without this, the system uses static fallbacks
ANTHROPIC_API_KEY=your_anthropic_api_key

# Cache Configuration
CACHE_DIR=./data/discovery
CACHE_TTL=86400

# Feature Flags
ENABLE_LLM_FEATURES=true
ENABLE_GITHUB_INDEXING=true
ENABLE_CACHE=true

# Rate Limiting
GITHUB_RATE_LIMIT_PER_HOUR=5000
LLM_RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
